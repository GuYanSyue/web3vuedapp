{
  "compilerOptions": {
    "outDir": "./",
    "suppressImplicitAnyIndexErrors": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [
      "cypress",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client",
      "vitest",
      "vue/ref-macros",
      "vite-plugin-vue-component-preview/client"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "app", "dist", "scripts", "hardhat.config.js"]
}
